<body>
<nav class="breadcrumb"><i class="Hui-iconfont">&#xe67f;</i> 首页 <span class="c-gray en">&gt;</span> 金额管理 <span class="c-gray en">&gt;</span>消费记录 <a class="btn btn-success radius r" style="line-height:1.6em;margin-top:3px" href="javascript:location.replace(location.href);" title="刷新" ><i class="Hui-iconfont">&#xe68f;</i></a></nav>
<div class="page-container">
	<form method="get" action="">
		<div class="text-c">
			日期范围：
			<input type="text" style="width:200px"onfocus="WdatePicker({skin:'whyGreen',dateFmt:'yyyy-MM-dd HH:mm:ss',minDate:'2008-03-08 11:30:00',maxDate:'2200-03-10 20:59:30'})" id="datemin" name="searchParam[operAt_start]" placeholder="开始时间" value="{{ searchParam.operAt_start is defined ? searchParam.operAt_start : '' }}" class="input-text Wdate" style="width:120px;">
			-
			<input type="text" style="width:200px" onfocus="WdatePicker({skin:'whyGreen',dateFmt:'yyyy-MM-dd HH:mm:ss',minDate:'2008-03-08 11:30:00',maxDate:'2200-03-10 20:59:30'})" id="datemax" name="searchParam[operAt_end]" placeholder="结束时间" value="{{ searchParam.operAt_end is defined ? searchParam.operAt_end : '' }}" class="input-text Wdate" style="width:120px;">
			<input type="text" class="input-text" style="width:250px" placeholder="输入用户" name="searchParam[username_annlike]" value="{{ searchParam.username_annlike is defined ? searchParam.username_annlike : '' }}">
			<select class="input-text" style="width:100px" name="searchParam[scoreType_equal]">
				<option value="0"{% if searchParam.scoreType_equal == 0 %}selected{% endif %}>请选择</option>
				<option value="1"{% if searchParam.scoreType_equal == 1 %}selected{% endif %}>充值</option>
				<option value="2"{% if searchParam.scoreType_equal == 2 %}selected{% endif %}>消费</option>
			</select>
			<button type="submit" class="btn btn-success radius" id="" name=""><i class="Hui-iconfont">&#xe665;</i> 搜索</button>
		</div>
	</form>

	{#<div class="cl pd-5 bg-1 bk-gray mt-20"> <span class="l"><a href="javascript:;" onclick="datadel()" class="btn btn-danger radius"><i class="Hui-iconfont">&#xe6e2;</i> 批量删除</a> <a href="javascript:;" onclick="member_add('添加用户','member-add.html','','510')" class="btn btn-primary radius"><i class="Hui-iconfont">&#xe600;</i> 添加用户</a></span> <span class="r">共有数据：<strong>88</strong> 条</span> </div>#}
	<div class="mt-20">
	<table class="table table-border table-bordered table-hover table-bg table-sort">
		<thead>
			<tr class="text-c">
				{#<th width="25"><input type="checkbox" name="" value=""></th>#}
				<th width="80">ID</th>
				<th width="100">用户名</th>
				<th width="100">消费分数</th>
				<th width="100">当前分数</th>
				<th width="100">消费时间</th>
				<th width="70">状态</th>
				{#<th width="100">操作</th>#}
			</tr>
		</thead>
		<tbody>
		{% if pagination.items is not empty %}
        {% for list in pagination %}
			<tr class="text-c">
				{#<td><input type="checkbox" value="{{ list.id is defined ? list.id : '' }}" name="user[]"></td>#}
				<td>{{ list.id is defined ? list.id : '' }}</td>
				<td>{{ list.userId.username is defined ? list.userId.username : '' }}</td>
				<td>{{ list.operScore is defined ? list.operScore : '' }}</td>
				<td>{{ list.nowScore is defined ? list.nowScore : '' }}</td>
				<td>{{ list.operAt is defined ? list.operAt|date('Y-m-d H:i:s') : '' }}</td>
				<td class="td-status">
                    {% if list.scoreType == 1 %}
						<span class="label label-danger radius">充值</span>
                        {% if list.consStatus == 1 %}
							<span class="label label-success radius">已到账</span>
                        {% else %}
							<span class="label label-danger radius">未到账</span>
                        {% endif %}
                    {% else %}
						<span class="label label-success radius">消费</span>
                    {% endif %}
				</td>
				{#<td class="td-manage"><a style="text-decoration:none" onClick="member_stop(this,'10001')" href="javascript:;" title="停用"><i class="Hui-iconfont">&#xe631;</i></a> <a title="编辑" href="javascript:;" onclick="member_edit('编辑','member-add.html','4','','510')" class="ml-5" style="text-decoration:none"><i class="Hui-iconfont">&#xe6df;</i></a> <a style="text-decoration:none" class="ml-5" onClick="change_password('修改密码','change-password.html','10001','600','270')" href="javascript:;" title="修改密码"><i class="Hui-iconfont">&#xe63f;</i></a> <a title="删除" href="javascript:;" onclick="member_del(this,'1')" class="ml-5" style="text-decoration:none"><i class="Hui-iconfont">&#xe6e2;</i></a></td>#}
			</tr>
		{% endfor %}
		{% endif %}
		</tbody>
	</table>
            {{ knp_pagination_render(pagination) }}
	</div>
